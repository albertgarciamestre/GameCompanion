<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/margin_medium"
    android:orientation="vertical"
    tools:context=".fragment.ProfileFragment">

    <RelativeLayout
            android:id="@+id/userProfileContent"
            android:layout_width="match_parent"
            android:layout_height="430dp"
            android:orientation="horizontal">

        <ImageView
                android:id="@+id/ProfBackTest"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:scaleType="centerCrop"
                android:visibility="visible"
                app:srcCompat="@drawable/background_profile" />

        <Button
                android:id="@+id/EdirProfBtn"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_button"
                android:text="EDIT PROFILE"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:translationX="220dp"
                android:translationY="240dp"
                android:visibility="visible" />

        <Button
                android:id="@+id/PublishProfBtn"
                android:layout_width="210dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_button"
                android:text="PUBLISH SOMETHING"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:translationX="160dp"
                android:translationY="290dp"
                android:visibility="visible" />

        <ImageView
                android:id="@+id/descriptionBackground"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="fitXY"
                android:translationY="230dp"
                app:srcCompat="@drawable/ic_descriptionbackground"></ImageView>

        <TextView
                android:layout_width="350dp"
                android:layout_height="90dp"
                android:layout_centerHorizontal="true"
                android:text="Lorem ipsum dolor sit amet, consectetuer adipiscing elit, sed diam nonummy nibh euismod tincidunt ut laoreet dolore magna aliquam erat volutpat"
                android:textSize="16sp"
                android:translationY="330dp"></TextView>

        <TextView
                android:id="@+id/ProfileName"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:text="PROFILE"
                android:textAlignment="viewStart"
                android:textSize="10sp"
                android:textStyle="bold"
                android:translationX="15dp"
                android:translationY="300dp"></TextView>

        <ImageView
                android:id="@+id/Image_Test"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:translationX="@dimen/browser_actions_context_menu_min_padding"
                android:translationY="150dp"
                android:visibility="visible" />
        >
    </RelativeLayout>

    <Button
        android:id="@+id/registerButton"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_item_height"
        android:text="@string/profile_register_button"/>
    <Button
            android:id="@+id/logInButton"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_item_height"
            android:text="LOGIN"/>

    <Button
        android:id="@+id/logoutButton"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_item_height"
        android:text="LOGOUT"/>

</LinearLayout>