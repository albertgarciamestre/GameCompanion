<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/margin_medium"
    android:orientation="vertical"
    tools:context=".fragment.ProfileFragment">

    <RelativeLayout
            android:id="@+id/userProfileContent"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:orientation="horizontal">

        <ImageView
                android:id="@+id/ProfBackTest"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:clickable="true"
                android:scaleType="centerCrop"
                android:visibility="visible"
                app:srcCompat="@drawable/background_profile" />

        <Button
                android:id="@+id/EdirProfBtn"
                android:layout_width="190dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_button"
                android:text="UPDATE USERNAME"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:translationX="180dp"
                android:translationY="110dp"
                android:visibility="visible" />

        <Button
                android:id="@+id/PublishProfBtn"
                android:layout_width="210dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_button"
                android:text="UPDATE DESCRIPTION"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:translationX="160dp"
                android:translationY="160dp"
                android:visibility="visible" />

        <ImageView
                android:id="@+id/descriptionBackground"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="fitXY"
                android:translationY="100dp"
                app:srcCompat="@drawable/ic_descriptionbackground"></ImageView>

        <EditText
                android:id="@+id/profile_description"
                android:layout_width="350dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:text="Lorem ipsum dolor sit amet, consectetuer adipiscing elit, sed diam nonummy nibh euismod tincidunt ut laoreet dolore magna aliquam erat volutpat"
                android:textSize="16sp"
                android:translationY="200dp"></EditText>

        <EditText
                android:id="@+id/ProfileName"
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:ellipsize="none"
                android:maxLines="100"
                android:scrollHorizontally="false"
                android:text="PROFILE"
                android:inputType="textNoSuggestions"
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                android:textSize="24sp"
                android:textStyle="bold"
                android:translationX="15dp"
                android:translationY="170dp"
                app:autoSizeTextType="uniform"></EditText>

        <ImageView
                android:id="@+id/Image_Test"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:clickable="true"
                android:translationX="@dimen/browser_actions_context_menu_min_padding"
                android:translationY="20dp"
                android:visibility="visible" /><![CDATA[

        >
    ]]>
    </RelativeLayout>

    <Button
            android:id="@+id/registerButton"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_item_height"
            android:background="@drawable/ic_button"
            android:text="@string/profile_register_button" />

    <Button
            android:id="@+id/logInButton"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_item_height"
            android:background="@drawable/ic_button"
            android:text="LOGIN" />

    <Button
            android:id="@+id/logoutButton"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_item_height"
            android:background="@drawable/ic_button"
            android:text="LOGOUT" />

</LinearLayout>