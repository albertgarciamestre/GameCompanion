<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_margin="@dimen/margin_medium"
    android:gravity="center"
    android:layout_height="match_parent"
    tools:context=".activity.RegisterActivity">

    <EditText
        android:id="@+id/usernameRegisterText"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_item_height"
        android:text="@string/username_register_text"
        />

    <EditText
        android:id="@+id/emailRegisterText"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_item_height"
        android:text="@string/email_register_text"
        />

    <EditText
        android:id="@+id/passwordRegisterText"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_item_height"
        android:text="@string/password_register_text"
        />

    <Button
        android:id="@+id/createButton"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_item_height"
        android:text="@string/create_register_button"
        />

</LinearLayout>