<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:padding="@dimen/margin_medium"
        android:orientation="vertical"
        tools:context=".fragment.ProfileFragment">

    <TextView
            android:id="@+id/ProfileName"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="gamer21"
            android:textAlignment="viewStart"
            android:textSize="10sp"
            android:textStyle="bold"
            android:translationX="15dp"
            android:translationY="10dp"></TextView>




    <TextView
            android:layout_width="350dp"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"
            android:text="Lorem ipsum dolor sit amet, consectetuer adipiscing elit, sed diam nonummy nibh euismod tincidunt ut laoreet dolore magna aliquam erat volutpat"
            android:textSize="16sp"
            android:translationY="30dp"></TextView>

    <ImageView
            android:id="@+id/ProfBackTest"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:scaleType="centerCrop"
            android:visibility="visible"

            android:translationY="20dp"
            app:srcCompat="@drawable/zelda_image" />




